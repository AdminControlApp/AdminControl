{
	"name": "admin-control-monorepo",
	"type": "module",
	"private": true,
	"engines": {
		"pnpm": ">=7.0.0"
	},
	"scripts": {
		"setup": "node ./scripts/setup.js",
		"pnpm:devPreinstall": "node ./packages/scripts/src/setup-check.js",
		"prepare": "lion-git-hooks",
		"typecheck": "pnpm recursive run typecheck",
		"lint": "pnpm recursive run lint",
		"prettier": "pnpm recursive run prettier",
		"dev:electron": "pnpm --filter=@admincontrol/app run dev",
		"build:electron": "pnpm --filter=@admincontrol/app run build",
		"compile:electron": "pnpm --filter=@admincontrol/app run compile"
	},
	"devDependencies": {
		"@leonzalion/configs": "^1.4.11",
		"@types/node": "^17.0.31",
		"execa": "^6.1.0",
		"lion-system": "^1.3.27",
		"typescript": "^4.6.4"
	}
}
