{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"types": [
			"node"
		],
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"~r/*": [
				"./src/*"
			],
			"~m": [
				"../main/src/*"
			],
			"~p": [
				"../preload/src/*"
			],
		},
		"lib": [
			"ESNext",
			"dom",
			"dom.iterable"
		]
	},
	"include": [
		"src/**/*.vue",
		"src/**/*.ts",
		"src/**/*.tsx",
		"typings/**/*.d.ts",
		"../../typings/**/*.d.ts",
		"../preload/typings/contracts.d.ts"
	],
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}