{
	"name": "@admincontrol/app",
	"type": "commonjs",
	"main": "main/dist/main.cjs",
	"scripts": {
		"build": "npm run build:main && npm run build:preload && npm run build:renderer",
		"build:main": "cd ./main && vite build",
		"build:preload": "cd ./preload && vite build",
		"build:renderer": "cd ./renderer && vite build",
		"compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
		"test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
		"test:e2e": "npm run build && vitest run",
		"test:main": "vitest run -r main --passWithNoTests",
		"test:preload": "vitest run -r preload --passWithNoTests",
		"test:renderer": "vitest run -r renderer --passWithNoTests",
		"dev": "cross-env ELECTRON_RUN_AS_NODE='' node-ts ./scripts/watch.ts",
		"lint": "eslint --fix --cache .",
		"prettier": "prettier --write .",
		"tc:main": "tsc --noEmit -p main/tsconfig.json",
		"tc:preload": "tsc --noEmit -p preload/tsconfig.json",
		"tc:renderer": "vue-tsc --noEmit -p renderer/tsconfig.json",
		"tc": "pnpm run tc:main && npm run tc:preload && npm run tc:renderer"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.2.1",
		"@types/package-name-regex": "^2.0.0",
		"@vitejs/plugin-vue": "2.3.1",
		"@vue/test-utils": "2.0.0-rc.21",
		"cross-env": "7.0.3",
		"electron": "^18.1.0",
		"electron-builder": "23.0.3",
		"electron-devtools-installer": "3.2.0",
		"happy-dom": "2.55.0",
		"playwright": "1.21.1",
		"rollup": "^2.70.2",
		"rollup-plugin-bundle-esm": "^0.1.1",
		"typescript": "^4.6.3",
		"vite": "2.9.5",
		"vite-plugin-windicss": "^1.8.4",
		"vitest": "0.9.4",
		"vue-tsc": "0.34.9"
	},
	"dependencies": {
		"desm": "^1.2.0",
		"electron-store": "^8.0.1",
		"electron-updater": "^5.0.1",
		"package-name-regex": "^2.0.6",
		"phone-call-pass": "link:../phone-call-pass/dist",
		"vite-plugin-js-imports": "^1.1.1",
		"vue": "^3.2.33",
		"windicss": "^3.5.1"
	}
}
